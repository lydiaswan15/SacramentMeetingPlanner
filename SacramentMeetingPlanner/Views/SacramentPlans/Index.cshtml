@model IEnumerable<SacramentMeeting.Models.SacramentPlan>

@{
    ViewData["Title"] = "Sacrament Meeting Plans";
}

<h1>Sacrament Meeting Plans</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Select one to view:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.SacramentPlanId" class="plan-link">
                        @Html.DisplayFor(modelItem => item.Date)
                        </a>
                    </td>
           
                </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>